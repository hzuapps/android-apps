<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:id="@+id/label1"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/welcome"
    />
    <TextView android:id="@+id/name"  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    />
    <TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/have"
    />
    <TextView android:id="@+id/left"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    />
    <TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/chance"
    />
    </LinearLayout>
    
	<LinearLayout android:id="@+id/label2"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<TextView android:id="@+id/give"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/number"
    />
    <EditText android:id="@+id/number"
    android:layout_width="100px" 
    android:layout_height="fill_parent"
    android:maxLength="4"
    android:digits="0123456789">
    <requestFocus />
    </EditText>
    <Button android:id="@+id/guess"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/guess"
    />
	</LinearLayout>
	
	<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/results"
    />
    
    <TextView android:id="@+id/results"
    android:layout_width="120px" 
    android:layout_height="wrap_content"
    />

     
    <TextView android:id="@+id/end"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    />
   
</LinearLayout>
 </ScrollView>
