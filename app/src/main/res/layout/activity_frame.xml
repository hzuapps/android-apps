<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/Frame_BottomView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/about_bottom_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_home_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_index_home"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/home_p" />

            <TextView
                android:id="@+id/tv_index_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:textColor="#FF8C00"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_video_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_index_video"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/search_button_video" />

            <TextView
                android:id="@+id/tv_index_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textColor="@color/search_bottom_textcolor"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_todolist_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_index_todolist"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/search_button_todolist" />

            <TextView
                android:id="@+id/tv_index_todolist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TodoList"
                android:textColor="@color/search_bottom_textcolor"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_index_my"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/search_bottom_my" />

            <TextView
                android:id="@+id/tv_index_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/search_bottom_textcolor"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_more_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_index_more"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/search_bottom_more" />

            <TextView
                android:id="@+id/tv_index_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textColor="@color/search_bottom_textcolor"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Frame_BottomView" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>